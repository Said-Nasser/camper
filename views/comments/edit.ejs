<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-8 p-5">
            <div class="edit-comment">
                <h1 style="text-align: center">Edit Comment</h1>
                <form action="/campgrounds/<%= campground_id %>/comments/<%=comment._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" value="<%=comment.text %>" name="comment"
                            placeholder="text">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-outline-success rounded-0">Submit!</button>
                    </div>
                </form>
                <a href="/campgrounds" class="link">Go Back</a>
            </div>
        </div>
    </div>
</div>
<% include ../partials/footer %>